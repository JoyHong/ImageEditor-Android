<HorizontalScrollView
    android:id="@+id/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="none"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_paint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_editor_image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/image_editor_edit"
            android:textColor="@color/image_editor_white"
            android:textSize="@dimen/image_editor_image_edit_text_size"/>

        <TextView
            android:id="@+id/btn_stickers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_editor_image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/image_editor_stickers"
            android:textColor="@color/image_editor_white"
            android:textSize="@dimen/image_editor_image_edit_text_size"/>

        <TextView
            android:id="@+id/btn_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_editor_image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/image_editor_filter"
            android:textColor="@color/image_editor_white"
            android:textSize="@dimen/image_editor_image_edit_text_size"/>

        <TextView
            android:id="@+id/btn_crop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_editor_image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/image_editor_crop"
            android:textColor="@color/image_editor_white"
            android:textSize="@dimen/image_editor_image_edit_text_size"/>

        <TextView
            android:id="@+id/btn_rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_editor_image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/image_editor_rotate"
            android:textColor="@color/image_editor_white"
            android:textSize="@dimen/image_editor_image_edit_text_size"/>

        <TextView
            android:id="@+id/btn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_editor_image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/image_editor_text"
            android:textColor="@color/image_editor_white"
            android:textSize="@dimen/image_editor_image_edit_text_size"/>

        <TextView
            android:id="@+id/btn_beauty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/image_editor_image_edit_menu_margin"
            android:gravity="center"
            android:text="@string/image_editor_beauty"
            android:textColor="@color/image_editor_white"
            android:textSize="@dimen/image_editor_image_edit_text_size"/>

    </LinearLayout>
</HorizontalScrollView>

