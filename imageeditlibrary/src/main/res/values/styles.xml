<resources>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/image_editor_colorPrimary</item>
        <item name="colorPrimaryDark">@color/image_editor_colorPrimaryDark</item>
        <item name="colorAccent">@color/image_editor_colorAccent</item>
        <item name="android:textColorPrimary">@color/image_editor_colorAccent</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/image_editor_main_backgroud</item>
        <item name="android:actionBarSize">@dimen/image_editor_action_bar_size</item>
    </style>


    <style name="popwin_anim_style">
        <item name="android:windowEnterAnimation">@anim/image_editor_menushow</item>
        <item name="android:windowExitAnimation">@anim/image_editor_menuhide</item>
    </style>

    <style name="seek_bar_style">
        <item name="android:maxHeight">@dimen/image_editor_seek_bar_height</item>
        <item name="android:minHeight">@dimen/image_editor_seek_bar_height</item>
        <item name="android:progressDrawable">@drawable/image_editor_seekbar_bg</item>
    </style>

    <style name="image_editor_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minWidth">?attr/actionBarSize</item>
        <item name="android:background">@drawable/image_edit_ripple</item>
    </style>

    <style name="image_editor_subtitle_item" parent="image_editor_subtitle">
        <item name="android:textSize">@dimen/image_editor_image_edit_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/image_editor_white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/image_editor_image_edit_text_padding</item>
        <item name="android:paddingEnd">@dimen/image_editor_image_edit_text_padding</item>
    </style>
</resources>
